{
  "manifest_version": 3,
  "name": "Universal AI Optimizer",
  "version": "2.2.0",
  "description": "Tự động ẩn tin nhắn cũ và thống kê cuộc trò chuyện trên ChatGPT, Claude, Grok, AI Studio",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://grok.com/*",
    "https://aistudio.google.com/*"
  ],
  
  "background": {
    "service_worker": "src/background/main.js"
  },
  
  "content_scripts": [{
    "matches": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*",
      "https://claude.ai/*",
      "https://grok.com/*",
      "https://aistudio.google.com/*"
    ],
    "js": [
      "src/shared/constants.js",
      "src/content/PlatformDetector.js",
      "src/content/DOMUtils.js",
      "src/content/MessageValidator.js",
      "src/content/StorageUtils.js",
      "src/content/MessageManager.js",
      "src/content/ShowMoreButton.js",
      "src/content/ChatObserver.js",
      "src/content/ScrollTo.js",
      "src/content/main-modular.js"
    ],
    "css": ["styles.css"]
  }],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Universal AI Optimizer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [{
    "resources": [
      "src/shared/*.js",
      "src/content/*.js"
    ],
    "matches": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*",
      "https://claude.ai/*",
      "https://grok.com/*",
      "https://aistudio.google.com/*"
    ]
  }]
}
